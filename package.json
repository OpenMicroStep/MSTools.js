{
  "name": "mstools",
  "private": true,
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "concurrently 'tsc' 'npm run build:umd:compress'",
    "build:umd": "browserify src/index.ts -p [ tsify ] -s MSTools -o dist/mstools.umd.js",
    "build:umd:debug": "browserify src/index.ts -p [ tsify ] -s MSTools -o dist/mstools.umd.js -d",
    "build:umd:compress": "npm run build:umd && uglifyjs dist/mstools.umd.js --mangle --compress --stats -o dist/mstools.umd.min.js",
    "test:umd": "browserify tests/index.ts -p [ tsify -p tests ] -o dist/mstools-tests.umd.js",
    "test:node": "mocha --colors tests/load.umd.js dist/mstools-tests.umd.js",
    "test:node-min": "mocha --colors tests/load.umd.min.js dist/mstools-tests.umd.js",
    "test": "npm run build && npm run test:umd && concurrently 'npm run test:node' 'npm run test:node-min'"
  },
  "devDependencies": {
    "@types/chai": "^3.4.30",
    "@types/expect": "^1.13.29",
    "@types/mocha": "^2.2.29",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "concurrently": "^2.2.0",
    "mocha": "^3.0.2",
    "tsify": "^1.0.3",
    "typescript": "^2.0.0",
    "uglify": "^0.1.5"
  }
}
