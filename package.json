{
  "name": "@microstep/mstools",
  "version": "1.0.0",
  "main": "dist/mstools.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc -p tests && concurrently 'npm run build:umd' 'npm run build:umd:compress'",
    "build:umd": "browserify null/index.js -s MSTools -o dist/mstools.umd.js",
    "build:umd:debug": "browserify null/index.js -s MSTools -o dist/mstools.umd.js -d",
    "build:umd:compress": "npm run build:umd && uglifyjs dist/mstools.umd.js --mangle --compress --stats -o dist/mstools.umd.min.js",
    "test:umd": "browserify null/tests/index.js -o dist/mstools-tests.umd.js",
    "test:node": "mocha --colors tests/load.umd.js dist/mstools-tests.umd.js",
    "test:node-min": "mocha --colors tests/load.umd.min.js dist/mstools-tests.umd.js",
    "test": "npm run build && npm run test:umd && concurrently 'npm run test:node' 'npm run test:node-min'"
  },
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@types/chai": "^3.4.30",
    "@types/expect": "^1.13.29",
    "@types/mocha": "^2.2.29",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "concurrently": "^2.2.0",
    "mocha": "^3.0.2",
    "typescript": "^2.0.10",
    "uglify": "^0.1.5"
  }
}
